<%=form_with  model: musicalbum do |form|%> 
<% if musicalbum.errors.full_messages.any? %>
<% musicalbum.errors.full_messages.each do |error_message| %> 
<%= error_message if musicalbum.errors.full_messages.first == error_message %> <br />
<% end %> 
<% end %>
<div>
  <%=form.label :name%> 
  <%=form.text_field :name, class:'form-control'%>
</div>
<br />
 <div>
  <%=form.label :cover_image%> 
  <%=form.file_field:cover_image,class:'form-control'%>
</div> 
<br />
<div>
  <%=form.label :description%> 
  <%=form.text_area:description, class:'form-control'%>
</div>
<br />
 <div>
  <%=form.label :music_file%> 
  <%=form.file_field:file,class:'form-control'%>
</div> 
<br />

<br />
<div>
  <%=form.label :price%> 
  <%=form.text_field:price, class:'form-control'%>
</div>
<br />
<div><%=form.submit%></div>
<%end%>
<br />